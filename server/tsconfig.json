{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "noEmit": true,
    "rootDir": "..",
  },
  "include": ["./**/*.ts", "../src/types/**/*.ts", "../src/data/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
